
<div class="container" style="margin-top:-40px">
    <div class="row d-flex">
        <div class="col-lg-12">
            <div class="section-title">
                <h2>Internships</h2>
                <p>
                    Internship gives me a lot of experience by working with my team.
                </p>
            </div>
        </div>
    </div>
    @if (Internships != null)
    {
        <div class="site-section" style="margin-top:-40px" id="about-section">
            <div class="container">
                @foreach (var item in Internships)
                {
                    <div class="row align-items-center">
                        <div class="col-lg-6 mb-5">
                            <img src="assets/img/ITI.png" alt="Image" class="img-fluid">
                        </div>
                        <div class="col-lg-5 ml-auto section-title">
                            <h2 class="title text-primary mb-3">@item.Title</h2>
                            <p class="mb-4 ">@item.Location.</p>
                            <p class="mb-4 ">@item.Description.</p>


                            <div class="d-flex justify-content-around">
                                <ul class="list-unstyled ul-check success mr-5">
                                    <li>From: <span class="text-info">@item.StartDate.ToString("dd MMM yyyy")</span> </li>
                                    <li></li>
                                    <li>To: <span class="text-info">@item.EndDate.ToString("dd MMM yyyy")</span> </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>

    }
    else
    {
        <h2>No Internship</h2>
    }
</div>



@code{
    [Parameter] public List<Models.Internship> Internships { get; set; }
}
